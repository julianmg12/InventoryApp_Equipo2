<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CC000000"
    android:padding="20dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#424242"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Flecha izquierda y texto-toolbar -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[translate:Agregar producto]"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Campo Código producto -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="[translate:Código producto]">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_codigo"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Nombre artículo -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="[translate:Nombre artículo]">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nombre"
            android:maxLength="40"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Precio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="[translate:Precio]">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_precio"
            android:inputType="number"
            android:maxLength="20"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Cantidad -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="[translate:Cantidad]">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_cantidad"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[translate:Guardar]"
        android:backgroundTint="#FA8523"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:layout_marginTop="24dp" />
</LinearLayout>

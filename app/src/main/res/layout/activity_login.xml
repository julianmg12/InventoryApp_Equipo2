<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <!-- Imagen alusiva a inventario (superior derecha) -->
    <ImageView
        android:id="@+id/iv_inventario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_inventory_image"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp" />

    <!-- Título Inventory -->
    <TextView
        android:id="@+id/tv_title_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#e7522e"
        app:layout_constraintTop_toBottomOf="@id/iv_inventario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Animación de huella (Lottie) en parte inferior central -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_huella"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:lottie_rawRes="@raw/fingerprint_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

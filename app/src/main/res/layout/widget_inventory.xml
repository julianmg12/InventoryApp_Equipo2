<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/bg_widget_rounded"
    android:padding="10dp">

    <!-- Logo y texto "Inventory" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_inventory_logo"
            android:contentDescription="Logo Inventory" />

        <TextView
            android:id="@+id/widget_label_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:textColor="#e7522e"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Texto y saldo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:paddingStart="20dp"
        android:gravity="top|right">

        <TextView
            android:id="@+id/widget_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuánto tengo de inventario?"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/widget_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$****"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/widget_eye_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_eye_open"
            android:contentDescription="Icono Ojo" />
    </LinearLayout>

    <!-- Gestionar inventario y icono -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_manage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar inventario"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/widget_manage_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_manage_orange"
            android:contentDescription="Gestionar Inventario" />
    </LinearLayout>

</RelativeLayout>

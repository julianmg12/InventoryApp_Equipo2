<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Sección Superior Izquierda -->
    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_inventory_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_logo"
        android:layout_alignStart="@id/widget_logo"
        android:layout_marginTop="4dp"
        android:text="Inventory"
        android:textColor="#e7522e"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Sección Superior Derecha -->
    <TextView
        android:id="@+id/widget_balance_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/widget_toggle_visibility_icon"
        android:layout_marginEnd="8dp"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/widget_toggle_visibility_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/widget_balance_question"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_eye_open_white"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/widget_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_balance_question"
        android:layout_alignEnd="@id/widget_toggle_visibility_icon"
        android:layout_marginTop="8dp"
        android:text="$ ****"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Sección Inferior Derecha (CORREGIDA) -->


    <TextView
        android:id="@+id/widget_manage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/widget_toggle_visibility_icon"
        android:text="Gestionar inventario"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/widget_manage_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/widget_manage_label"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/widget_manage_label"
        android:src="@drawable/ic_manage_orange"
        tools:ignore="ContentDescription" />


</RelativeLayout>